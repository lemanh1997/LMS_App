<%= form_for(@publisher) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

	<%= f.label :address %>
    <%= f.text_area :address %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit yield(:button_name), class: "btn btn-primary" %>
<% end %>
